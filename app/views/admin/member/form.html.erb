<%= content_tag(:ul) { @record.errors.full_messages.map { |x| content_tag(:li, x) }.join.html_safe } if @record %>
<%= form_tag do %>
    <%= label_tag('member[name]', 'Name') %>
    <%= text_field_tag('member[name]', @record.try(:name), required: true) %>
    <br>
    <%= label_tag('member[student_id]', 'Student ID') %>
    <%= text_field_tag('member[student_id]', @record.try(:student_id), required: true) %>
    <br>
    <%= label_tag('member[department_id]', 'Department') %>
    <%= select_tag('member[department_id]', options_from_collection_for_select(Department.all, :id, :short_name, @record.try(:department_id)), include_blank: true) %>
    <br>
    <%= label_tag('member[phone]', 'Phone') %>
    <%= text_field_tag('member[phone]', @record.try(:phone)) %>
    <br>
    <%= submit_tag('Submit') %>
<% end %>
